{
  "name": "make-your-life-easier",
  "version": "1.0.0",
  "description": "A modern, user-friendly desktop application for managing system tasks and utilities.",
  "author": "ThomasThanos <thomasthanos2@icloud.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-portable": "electron-builder --win portable",
    "build-installer": "electron-builder --win nsis",
    "build-all": "npm run build-portable && npm run build-installer",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-sudo": "^4.0.12",
    "node-windows": "^1.0.0-beta.8",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.kolokithes.makeyourlifeeasier",
    "productName": "MakeYourLifeEasier",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!bin/**/*"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": ["**/*"]
      },
      {
        "from": "lang",
        "to": "lang",
        "filter": ["**/*"]
      },
      {
        "from": "password-manager",
        "to": "password-manager", 
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "hacker.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Make Your Life Easier",
      "installerIcon": "hacker.ico",
      "uninstallerIcon": "hacker.ico",
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "MakeYourLifeEasier-Portable.exe"
    }
  }
}